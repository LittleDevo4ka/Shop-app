<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/wasteid_profile_title_register_profile"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Profile"
        android:textSize="28dp"
        android:textColor="@color/black"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_layout_register_profile"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:endIconMode="clear_text"

        app:layout_constraintTop_toBottomOf="@id/wasteid_profile_title_register_profile"
        android:layout_marginTop="146dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_edittext_register_profile"

            android:hint="Email"

            android:layout_width="280dp"
            android:layout_height="56dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_layout_register_profile"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:endIconMode="password_toggle"

        app:layout_constraintTop_toBottomOf="@+id/email_layout_register_profile"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_edittext_register_profile"

            android:layout_width="280dp"
            android:layout_height="56dp"

            android:hint="Password"
            android:inputType="textPassword"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/repeat_password_layout_register_profile"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:endIconMode="password_toggle"

        app:layout_constraintTop_toBottomOf="@+id/password_layout_register_profile"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/repeat_password_edittext_register_profile"

            android:layout_width="280dp"
            android:layout_height="56dp"

            android:hint="Password"
            android:inputType="textPassword"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/register_button_register_profile"

        android:layout_width="180dp"
        android:layout_height="wrap_content"

        android:text="Register"
        app:elevation="8dp"

        app:layout_constraintTop_toBottomOf="@id/repeat_password_layout_register_profile"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/wasteid_or_tv_register_profile"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="or"
        android:textSize="11dp"
        android:textColor="@color/text_color97"

        app:layout_constraintTop_toBottomOf="@id/register_button_register_profile"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/log_in_button_register_profile"

        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Log in"
        android:textColor="@color/black"
        app:elevation="8dp"

        app:layout_constraintTop_toBottomOf="@id/wasteid_or_tv_register_profile"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>